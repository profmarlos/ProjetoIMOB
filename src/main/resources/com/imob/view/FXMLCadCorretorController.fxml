<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.imob.view.FXMLCadCorretorController">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
            <Label text="ID Corretor" />
            <TextField fx:id="textIdCorretor" />
            <Label text="Código Corretor" />
            <TextField fx:id="textCodigoCorretor" />
            <Label text="Número Creci" />
            <TextField fx:id="textNumeroCreci" />
        </VBox>
        <TableView fx:id="tbCorretores" layoutX="200.0" layoutY="14.0" onMouseClicked="#selecionarLinhaViewTable"  prefHeight="372.0" prefWidth="386.0">
            <columns>
                <TableColumn fx:id="colunaIdCorretor" prefWidth="100.0" text="ID Corretor" />
                <TableColumn fx:id="colunaCodigoCorretor" prefWidth="100.0" text="Código Corretor" />
                <TableColumn fx:id="colunaNumeroCreci" prefWidth="100.0" text="Número Creci" />
            </columns>
        </TableView>
        <HBox layoutX="14.0" layoutY="362.0" spacing="10.0">
            <Button fx:id="inserirButton" mnemonicParsing="false" onAction="#inserirDadosNoBancoDados" text="Inserir" />
            <Button fx:id="deletarButton" mnemonicParsing="false" onAction="#deletarInformacoesNoBanco" text="Deletar" />
            <Button fx:id="atualizarButton" mnemonicParsing="false" onAction="#atualizarInformacoesNoBanco" text="Atualizar" />
        </HBox>
        <Button fx:id="limparButton" layoutX="70.0" layoutY="331.0" mnemonicParsing="false" onAction="#atualizarInformacoesNoBanco" text="limpar" />
    </children>
</AnchorPane>
